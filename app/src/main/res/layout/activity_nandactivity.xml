<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/batang"
    tools:context=".NANDActivity">

    <ImageView
        android:id="@+id/nand_symbol"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toTopOf="@+id/nand_resultbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nand_switchbtn_1"
        app:srcCompat="@drawable/nand" />

    <ImageButton
        android:id="@+id/nand_switchbtn_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="19dp"
        android:adjustViewBounds="true"
        android:background="@drawable/batang"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/nand_symbol"
        app:layout_constraintEnd_toStartOf="@+id/xnor_switchbtn_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn0" />

    <ImageButton
        android:id="@+id/xnor_switchbtn_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="79dp"
        android:adjustViewBounds="true"
        android:background="@drawable/batang"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/nand_symbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nand_switchbtn_1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn0" />

    <ImageView
        android:id="@+id/nand_resultbtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nand_symbol"
        app:srcCompat="@drawable/btn0" />

    <ImageButton
        android:id="@+id/nand_needex"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="302dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="274dp"
        android:adjustViewBounds="true"
        android:background="@drawable/batang"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/nand_symbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/nand_symbol"
        app:layout_constraintTop_toTopOf="@+id/nand_symbol"
        app:layout_constraintVertical_bias="0.46"
        app:srcCompat="@drawable/questionsymbol" />
</androidx.constraintlayout.widget.ConstraintLayout>