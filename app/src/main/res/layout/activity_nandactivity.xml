<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/BATANG"
    tools:context=".NANDActivity">

    <ImageButton
        android:id="@+id/nand_switchbtn_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn0" />

    <ImageButton
        android:id="@+id/xnor_switchbtn_2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="79dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nand_switchbtn_1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn0" />

    <ImageButton
        android:id="@+id/xnor_switchbtn_3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btn0" />

    <ImageView
        android:id="@+id/nand_symbol"
        android:layout_width="410dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toTopOf="@+id/xnor_switchbtn_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nand_switchbtn_1"
        app:srcCompat="@drawable/NAND" />
</androidx.constraintlayout.widget.ConstraintLayout>