<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/BATANG"
    tools:context=".XORexplainActivity">

    <ImageView
        android:id="@+id/xor_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/EXFORXOR" />

    <ImageButton
        android:id="@+id/xor_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="302dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="631dp"
        android:adjustViewBounds="true"
        android:background="@drawable/BATANG"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/xor_explain"
        app:layout_constraintEnd_toEndOf="@+id/xor_explain"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/xor_explain"
        app:layout_constraintTop_toTopOf="@+id/xor_explain"
        app:srcCompat="@drawable/backward" />
</androidx.constraintlayout.widget.ConstraintLayout>