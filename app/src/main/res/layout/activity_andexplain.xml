<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/BATANG"
    tools:context=".ANDexplainActivity">

    <ImageView
        android:id="@+id/and_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/EXFORAND" />

    <ImageButton
        android:id="@+id/and_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="640dp"
        android:adjustViewBounds="true"
        android:background="@drawable/BATANG"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/and_explain"
        app:layout_constraintEnd_toEndOf="@+id/and_explain"
        app:layout_constraintStart_toStartOf="@+id/and_explain"
        app:layout_constraintTop_toTopOf="@+id/and_explain"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/backward" />
</androidx.constraintlayout.widget.ConstraintLayout>